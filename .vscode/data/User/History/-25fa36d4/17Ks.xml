<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" 
xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout">
<Dialog title="Create Product">
    <f:SimpleForm>
        <f:content>
            <Label text="Material ID"/>
            <Input value="{Materialsob>/materialId}" editable="false"/>
            <Label text="Material Name"/>
            <Input value="{Materialsob>/materialName}"/>
            <Label text="Description"/>
            <Input value="{Materialsob>/description}"/>
            <Label text="unitOfMeasure"/>
            <Input value="{Materialsob>/unitOfMeasure}"/>
             <Label text="current Stock"/>
            <Input value="{Materialsob>/currentStock}"/>
        </f:content>
    </f:SimpleForm>
    <beginButton>
        <Button text="Save" press="onSaveProduct"/>
    </beginButton>
    <endButton>
    <Button text="Cancel" press="onCancelProduct"/>
    </endButton>
</Dialog>
</core:FragmentDefinition>