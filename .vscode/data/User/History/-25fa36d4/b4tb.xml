<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" 
xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout">
<Dialog title="Create Product">
    <f:SimpleForm>
        <f:content>
            <Label text="Product Name"/>
            <Input value="{Productsob>/materialId}"/>
            <Label text="Product Description"/>
            <Input value="{Productsob>/materialName}"/>
            <Label text="Location"/>
            <Input value="{Productsob>/description}"/>
            <Label text="Cost Center"/>
            <Input value="{Productsob>/unitOfMeasure}"/>
        </f:content>
    </f:SimpleForm>
    <beginButton>
        <Button text="Save" press="onSaveProduct"/>
    </beginButton>
    <endButton>
    <Button text="Cancel" press="onCancelProduct"/>
    </endButton>
</Dialog>
</core:FragmentDefinition>