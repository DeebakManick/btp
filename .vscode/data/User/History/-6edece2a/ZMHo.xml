<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout">
<Dialog title="Add Product">
    <f:SimpleForm>
        <f:content>
            <Label text="Product Name"/>
            <Input value="{Productsob>/title}"/>
            <Label text="Product number"/>
            <Input value="{Productsob>/number}"/>
            <Label text="statusText"/>
            <Input value="{Productsob>/statusText}"/>
            <Label text="Cost statusText"/>
            <Input value="{Productsob>/CostCenter}"/>
        </f:content>
    </f:SimpleForm>
    <beginButton>
        <Button text="Save" press="onSaveProduct"/>
    </beginButton>
    <endButton>
    <Button text="Cancel" press="onCancelProduct"/>
    </endButton>
</Dialog>
</core:FragmentDefinition>