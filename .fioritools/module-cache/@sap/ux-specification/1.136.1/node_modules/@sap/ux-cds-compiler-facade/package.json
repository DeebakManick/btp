{
  "name": "@sap/ux-cds-compiler-facade",
  "version": "1.18.0",
  "description": "SAP Fiori tools - CDS compiler facade",
  "publisher": "SAPSE",
  "main": "dist/index.js",
  "author": "SAP SE",
  "license": "SEE LICENSE IN LICENSE",
  "private": false,
  "scripts": {
    "build": "npm-run-all -l clean compile",
    "compile": "tsc --build ./tsconfig.build.json",
    "clean": "rimraf -g ./reports ./dist *.tsbuildinfo",
    "format:fix": "prettier --write",
    "format:fix:all": "prettier --write '**/*.{css,scss,html,js,json,ts,tsx,yaml,yml}' '!**/{out,dist,typings,node_modules}/**' '!**/*.{svg,png,xml}'",
    "lint": "npm-run-all -l lint:report",
    "lint:simple": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint --fix",
    "lint:fix:all": "eslint . --ext .ts,.tsx --fix",
    "lint:report": "eslint . --ext .ts,.tsx -f multiple ",
    "lint:summary": "eslint . --ext .ts,.tsx -f summary",
    "madge": "madge --warning --circular --extensions ts ./",
    "pre-commit": "lint-staged --quiet",
    "pre-push": "npm-run-all -l build test",
    "test": "npm-run-all -l compile madge test:latest test:maintenance test:next",
    "test:all": "npm-run-all -l test:latest test:maintenance test:next",
    "test:maintenance": "jest --maxWorkers=2 --cds-branch=maintenance",
    "test:latest": "jest --maxWorkers=2 --cds-branch=latest",
    "test:next": "jest --maxWorkers=2 --cds-branch=next",
    "watch": "tsc  --build ./ -watch",
    "xmake:build": "npm-run-all -l lint:report build madge test",
    "bump": "npm version patch --no-commit-hooks --no-git-tag-version --force --no-commit",
    "bump:rdm": "npm version minor --no-commit-hooks --no-git-tag-version --force --no-commit",
    "prepare": "husky"
  },
  "peerDependencies": {
    "@sap-ux/odata-annotation-core": ">=0.2.5",
    "@sap-ux/odata-annotation-core-types": ">=0.4.4",
    "@sap-ux/project-access": ">=1.30.2"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@sap-ux/cds-annotation-parser": "0.2.11",
    "@sap-ux/odata-annotation-core": "0.2.5",
    "@sap-ux/odata-annotation-core-types": "0.4.4",
    "@sap-ux/project-access": "1.30.2",
    "@types/jest": "29.5.14",
    "@types/rimraf": "4.0.5",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "10.1.2",
    "eslint-formatter-multiple": "2.0.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-prettier": "3.4.1",
    "eslint-plugin-sonarjs": "0.25.1",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "jest-config": "29.7.0",
    "jest-environment-node": "29.7.0",
    "jest-extended": "4.0.2",
    "jest-junit": "16.0.0",
    "jest-sonar-reporter": "2.0.0",
    "lint-staged": "15.5.1",
    "madge": "4.0.2",
    "npm-run-all2": "7.0.2",
    "prettier": "2.8.8",
    "rimraf": "6.0.1",
    "ts-jest": "29.3.2",
    "typescript": "5.8.2"
  },
  "overrides": {
    "nanoid": "^3.3.8"
  },
  "files": [
    "dist/",
    "types/"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "jestSonar": {
    "reportPath": "reports/test/unit",
    "reportFile": "test-report.xml"
  },
  "eslint-formatter-multiple": {
    "formatters": [
      {
        "name": "stylish",
        "output": "console"
      },
      {
        "name": "json",
        "output": "file",
        "path": "reports/lint/eslint.json"
      },
      {
        "name": "checkstyle",
        "output": "file",
        "path": "reports/lint/eslint.checkstyle.xml"
      }
    ]
  }
}